{
  "manifest_version": 2,

  "name": "AllyStats",
  "description": "Generates statistics using the Ally checker within Canvas.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo-small.png",
    "48": "logo-small.png",
    "128": "logo-small.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-5UcyBRgvmcV/KBbPAupMeWnrTmK6FM0iWhuapKFk2Tw='; object-src 'self'",  
  "permissions": [
    "*://*/*"
  ]
}